<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlanetaVenus">

    <Button
        android:id="@+id/btn_enviar6"
        android:layout_width="221dp"
        android:layout_height="87dp"
        android:layout_marginBottom="48dp"
        android:onClick="mostrar"
        android:text="@string/btn_enviar"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.678"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.682" />

    <TextView
        android:id="@+id/txtrest1"
        android:layout_width="409dp"
        android:layout_height="27dp"
        android:layout_marginBottom="124dp"
        android:text="@string/txtRespuesta"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_enviar6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/venus1"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/venus1"
        android:layout_width="408dp"
        android:layout_height="49dp"
        android:text="Planeta Venus"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="2dp" />

    <Spinner
        android:id="@+id/spinner_5"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="424dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_enviar6"
        app:layout_constraintTop_toBottomOf="@id/spinner_5"
        tools:layout_editor_absoluteX="1dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="215dp"
        android:layout_height="224dp"
        app:srcCompat="@drawable/venus"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="117dp" />

</androidx.constraintlayout.widget.ConstraintLayout>